<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessagingCenterSample.HomePage"
             Title="Chapter 3: Messaging Center Sample">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                x:Name="WelcomeLabel"
                Text="Welcome to .NET MAUI, Stranger"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="SignInButton"
                Text="Sign In"
                SemanticProperties.Hint="Navigates to login page"
                Clicked="NavigateToLoginPageButtonClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

