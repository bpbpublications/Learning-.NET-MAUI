<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningMauiBankingApp.Themes.DefaultColorScheme">
    <Color x:Key="LightPrimaryTextColor">#000000</Color>
    <Color x:Key="LightSecondaryTextColor">#8E8E93</Color>

    <Color x:Key="LightPrimaryBackgroundColor">#FFFFFF</Color>
    <Color x:Key="LightSecondaryBackgroundColor">#F5F5F5</Color>

    <Color x:Key="DarkPrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="DarkSecondaryTextColor">#8E8E93</Color>

    <Color x:Key="DarkPrimaryBackgroundColor">#1C1C1E</Color>
    <Color x:Key="DarkSecondaryBackgroundColor">#000000</Color>

    <Style x:Key="PageStyle" TargetType="Page">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSecondaryBackgroundColor}, Dark={StaticResource DarkSecondaryBackgroundColor}}"/>
    </Style>
</ResourceDictionary>
